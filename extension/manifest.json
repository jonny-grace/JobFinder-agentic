{
  "manifest_version": 3,
  "name": "Resume AI Agent",
  "version": "1.0",
  "description": "Auto-fill job applications with your tailored resume.",
  "permissions": ["activeTab", "scripting", "storage", "cookies"],
  "host_permissions": [
    "http://localhost:3000/*",
    "https://*.linkedin.com/*",
    "https://*.greenhouse.io/*",
    "https://*.lever.co/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
